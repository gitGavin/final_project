<div class="page-header">
  <h1>
    Listings
    <a href="/listings/new" class="btn btn-lg btn-success">New Listing</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Listing ID</th>
        <th>Book name</th>
        <th>Version</th>
        <th>Course code</th>
        <th>Required</th>
        <th>Price</th>
        <th>Description</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.id %></td>
        <td><%= listing.book_name %></td>
        <td><%= listing.version %></td>
        <td><%= listing.course_code %></td>
        <td><%= listing.required %></td>
        <td><%= listing.price %></td>
        <td><%= listing.description %></td>
        <td><%= listing.user_id %></td>
        <td>
          <a href="/listings/<%= listing.id %>" class="btn btn-primary">Show</a>
          <% if current_user.id == listing.user_id %>
            <a href="/listings/<%= listing.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_listing/<%= listing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
